#include<iostream>
#include<climits>
using namespace std;

int main(){
    int n;
    cout<<"enter the size of the array: "<<endl;
    cin>>n;
    int arr[n];
    cout<<"enter elements of your array: "<<endl;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int counter=1;
    while(counter<n){
        for(int i=0;i<n-counter;i++){
            if(arr[i]>arr[i+1]){
                int temp=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=temp;
            }
        }
        counter++;
    }
   cout<<"the sorted array is: ";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    
}
output:
enter the size of the array: 
5
enter elements of your array: 
98 54 68 32 12
the sorted array is: 12 32 54 68 98 
